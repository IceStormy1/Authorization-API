@model AuthenticateParameters

<head>
    <title>Login</title>
    <link href=@Url.Content("~/Views/Styles/app.css") rel="stylesheet" type="text/css"/>
</head>

<form asp-controller="Authorization" asp-action="Login" method="post">
    <input type="hidden" asp-for="ReturnUrl"/>
    <div class="header">Login</div>
    <div class="block">
        <label>UserName</label>
        <input asp-for="UserName" class="input"/>
    </div>
    <div class="block">
        <label>Password</label>
        <input asp-for="Password" class="input" />
    </div>
    <div class ="block">
        <button type="submit" class="button">Sign In</button>
    </div>
</form>
